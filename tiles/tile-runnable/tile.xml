<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

  <tiles>
	  <tile>com.globaldairytrade.tiles:tile-common:[1.1, 2)</tile>
  </tiles>

	<properties>
		<main.class>cd.connect.Application</main.class>
	</properties>

	<profiles>
		<profile>
			<id>instrumented-build</id>
			<activation>
				<activeByDefault>false</activeByDefault>
				<property>
					<name>instrumentClient</name>
					<value>true</value>
				</property>
			</activation>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.9</version>
				<executions>
					<execution>
						<id>prepare-unit-test-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>generate-unit-test-report</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>cd.connect.plugins</groupId>
				<artifactId>connect-prescan-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>pkg</id>
						<goals>
							<goal>prescan-config</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.bluetrainsoftware.maven</groupId>
				<artifactId>bathe-plugin</artifactId>
				<version>2.7</version>
				<extensions>true</extensions>
				<executions>
					<execution>
						<id>default</id>
						<phase>package</phase>
						<goals>
							<goal>time</goal>
						</goals>
						<configuration>
							<jumpClass>${main.class}</jumpClass>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
